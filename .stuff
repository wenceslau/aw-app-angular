npm i @ngrx/store@17
  {install ngrx, similar to redux}

npm i @angular-eslint/eslint-plugin -D
  {install eslint for angular}

ng add @angular-eslint/schematics
  {add angular-eslint schematics, this will add eslint to the project, and will also add the .eslintrc.json file}

npm install @typescript-eslint/parser @typescript-eslint/eslint-plugin -D
  {install typescript-eslint, this will allow us to use typescript with eslint}

npm install husky -D
  {install husky, this will allow us to run scripts before git actions}

npx husky init
  {initialize husky, this will add the husky configuration to the package.json file}


npm install cypress -D
    {to install cypress}
npx cypress open
    {to open cypress and to create the initial configuration}
npm install eslint-plugin-cypress -D
    {plugin for eslint not complain about cypres}


cypress open
    {to open cypress and to create the initial configuration}
cypress run
    {to run cypress tests in the terminal for the e2e tests}
cypress run --component
    {to run cypress tests in the terminal for the components}

storybook
    {to create a storybook}
    npx sb init
        [to create a storybook]

    {to run the storybook}
    npm run storybook
        [to run the storybook]

npm install eslint-plugin-storybook -D
    {to install eslint plugin for storybook}
