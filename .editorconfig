# top-most EditorConfig file
root = true

[*]
indent_style = space
indent_size = 2
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# 2 space indentation for HTML and CSS files
[*.html]
indent_style = space
indent_size = 2

[*.css]
indent_style = space
indent_size = 2

# 2 space indentation for JavaScript files
[*.js]
indent_style = space
indent_size = 2

# 2 space indentation for JavaScript files
[*.ts]
indent_style = space
indent_size = 2

# JSON files (common for configurations)
[*.json]
indent_style = space
indent_size = 2

# Tab indentation for Makefiles
[Makefile]
indent_style = tab